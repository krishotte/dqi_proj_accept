#:kivy 1.10.1
#main view for project overview displaying
<ItemBasicNA>:
    orientation: 'horizontal'
    #id1: ''
    #name1: ''
    canvas.after: 
        Color:
            rgba: 0.4, 0.4, 0.4, 1
        Line:
            width: 1
            #rectangle: (self.x, self.y, self.width, self.height)
            points: (self.x, self.y+1, self.x + self.width, self.y+1)
    Label:
        id: _id
        size_hint_x: 0.2
        text: root.id1 #'0'
    Label:
        id: _name
        size_hint_x: 0.6
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        text: root.name1 #'name'
    Label:
        id: _status
        size_hint_x: 0.1
        text: root.status  # 'N/A'
        canvas.before:
            Color:
                rgba: root.status_color  # 0.102, 0.082, 0.412, 1
            Rectangle:
                pos: self.pos
                size: self.size
    Label:
        id: _note
        size_hint_x: 0.1
        text: root.note  # 'no'

<ItemSectionTitle>:
    orientation: 'horizontal'
    #id1: ''
    #name1: ''
    canvas.before:
        Color:
            rgba: root.background_color #0.102, 0.282, 0.812, 1
        Rectangle:
            pos: self.pos
            size: self.size 
    Label:
        id: _id
        size_hint_x: 0.2
        text: root.id1 #'0'
    Label:
        id: _name
        size_hint_x: 0.8
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        text: root.name1 #'name'
        
<ProjectRecycleView>:
    viewclass: 'ItemBasicNA'
    RecycleBoxLayout:
        default_size: None, sp(48)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<ProjectContainer>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.8
            Label:
                id: _proj_name
                text: root.proj_name
            Label:
                id: _proj_file
                text: root.proj_file
                font_size: sp(11)
        Button:
            text: 'Report'
            size_hint_x: 0.1
            on_release: root.create_report()
        Button:
            text: 'Save'
            size_hint_x: 0.1
            on_release: root.save()
        Button:
            text: 'Close'
            size_hint_x: 0.1
            on_release: root.close()
